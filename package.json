{
  "name": "vite-template",
  "description": "Experimental Vite, Vue 3, GitHub Actions & GitHub Pages setup.",
  "version": "0.0.1",
  "scripts": {
    "serve": "pnpm run serve:src",
    "serve:src": "vite --open",
    "serve:dist:dev": "pnpx browser-sync ./dist --single --no-notify --no-ui",
    "build": "pnpm run build:dev",
    "build:dev": "vite build --base='./' --sourcemap",
    "build:prod": "vite build --base='/vite-template/'",
    "version": "bash scripts/version.sh"
  },
  "dependencies": {
    "vue": "^3.0.0-beta.18",
    "vue-router": "^4.0.0-alpha.12"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.0.0-beta.18",
    "browser-sync": "^2.26.7",
    "vite": "^1.0.0-beta.11"
  }
}
